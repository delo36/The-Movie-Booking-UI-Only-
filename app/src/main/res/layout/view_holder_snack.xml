<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/margin_medium_2"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFirstComboSet"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_height="wrap_content"
        android:text="Combo set M"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_below="@id/tvFirstComboSet"
        android:text="Combo Size M 220z Coke(XL)"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_medium_2">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCostComboFirstSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="15$"
            android:textColor="@color/black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vMinusComboFirstSet"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@id/tvCostComboFirstSet"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/background_first_combo_set_minus"
            android:gravity="center"
            android:text="-" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vCountComboFirstSet"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@id/tvCostComboFirstSet"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toEndOf="@id/vMinusComboFirstSet"
            android:background="@drawable/background_first_combo_set_count"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/vPlusComboFirstSet"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@id/tvCostComboFirstSet"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toEndOf="@id/vCountComboFirstSet"
            android:background="@drawable/background_first_combo_set_plus"
            android:gravity="center"
            android:text="+" />

    </RelativeLayout>

</RelativeLayout>